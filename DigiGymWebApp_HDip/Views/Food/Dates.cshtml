@model IEnumerable<DigiGymWebApp_HDip.Models.Food>
@using System.Text.Json

@{
    var breakfast = Model.Where(b => b.MealType == MealTypes.Breakfast).ToList();
    var lunch = Model.Where(l => l.MealType == MealTypes.Lunch).ToList();
    var dinner = Model.Where(d => d.MealType == MealTypes.Dinner).ToList();
    var snack = Model.Where(s => s.MealType == MealTypes.Snack).ToList();
}
@{
    ViewBag.Title = "Food Details";
}

<div class="container">
    <div class="row pre-footer">
        <h2 class="text-center mt-3">Food Details for @Model.FirstOrDefault()?.CreatedAt.ToString("d")</h2>
        <h3 class="calcount text-center dashed pb-3">Calories today: @ViewBag.TotalCalories</h3>

        <div class="col-sm-6">
            @if (breakfast.Any())
            {
                
                <h4 class="text-center mealtime-color py-2">Breakfast</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Calories</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in breakfast)
                        {
                            <tr>
                                <td>@item.FoodName</td>
                                <td>@item.Calories</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.FoodID">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.FoodID">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.FoodID"> Delete </a>
                                </td>

                            </tr>

                        }
                    </tbody>

                </table>
                
            }
            else
            {
                <h4 class="text-center mealtime-color py-2">Breakfast</h4>
                <p class="text-center">No entries. <a asp-action="Create"> Add</a></p>
            }


            @if (lunch.Any())
            {
                <h4 class="text-center mealtime-color py-2">Lunch</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Calories</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in lunch)
                        {
                            <tr>
                                <td>@item.FoodName</td>
                                <td>@item.Calories</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.FoodID">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.FoodID">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.FoodID"> Delete </a>
                                </td>

                            </tr>

                        }
                    </tbody>

                </table>
            }
            else
            {
                <h4 class="text-center mealtime-color py-2">Lunch</h4>
                <p class="text-center">No entries. <a asp-action="Create"> Add</a></p>
            }


            @if (dinner.Any())
            {
                <h4 class="text-center mealtime-color py-2">Dinner</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Calories</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in dinner)
                        {
                            <tr>
                                <td>@item.FoodName</td>
                                <td>@item.Calories</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.FoodID">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.FoodID">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.FoodID"> Delete </a>
                                </td>

                            </tr>

                        }
                    </tbody>

                </table>
            }
            else
            {
                <h4 class="text-center mealtime-color py-2">Dinner</h4>
                <p class="text-center">No entries. <a asp-action="Create">Add</a></p>
            }


            @if (snack.Any())
            {
                <h4 class="text-center mealtime-color py-2">Snack</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Calories</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in snack)
                        {
                            <tr>
                                <td>@item.FoodName</td>
                                <td>@item.Calories</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.FoodID">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.FoodID">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.FoodID"> Delete </a>
                                </td>

                            </tr>

                        }
                    </tbody>

                </table>
            }
            else
            {
                <h4 class="text-center mealtime-color py-2">Snack</h4>
                <p class="text-center">No entries. <a asp-action="Create"> Add</a></p>
            }
            </div>


            <div class="col-sm-6">
                <div class="pre-footer">
                    <h2 class="text-center">Macro Pie</h2>
                    <div class="foodChartContainer">
                    <canvas id="macroPie" width="400" height="200"></canvas>
                    </div>

                    <!-- Hidden elements to hold the JSON data -->
                    <div id="proteinData" style="display: none;">@ViewBag.TotalProtein</div>
                    <div id="carbData" style="display: none;">@ViewBag.TotalCarbs</div>
                    <div id="fatData" style="display: none;">@ViewBag.TotalFat</div>
                </div>
            </div>
        </div>
    </div>
</div>
