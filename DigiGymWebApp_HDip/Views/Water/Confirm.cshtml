@model DigiGymWebApp_HDip.Models.Water

@{
    ViewData["Title"] = "Confirm";
}

<div class="container">
    <div class="row">

        <h1 class="text-center dashed py-3">Confirmation</h1>

        <div class="text-center">
            <dl class="row">
                <dt class="col-sm-6 text-lg-end">
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>
                <dd class="col-sm-6 text-lg-start">
                    @Html.DisplayFor(model => model.Amount)
                </dd>
                <dt class="col-sm-6 text-lg-end">
                    @Html.DisplayNameFor(model => model.Timestamp)
                </dt>
                <dd class="col-sm-6 text-lg-start">
                    @Html.DisplayFor(model => model.Timestamp)
                </dd>
            </dl>
            <div class="text-center">
                <a asp-action="Edit" asp-route-id="@Model?.WaterID">Edit</a> |
                <a asp-action="WaterEntries">All Water Entries</a>
            </div>
            <div class="text-center">
                <a asp-controller="Water" asp-action="Chart">See water chart >></a>
            </div>
        </div>

    </div>
</div>