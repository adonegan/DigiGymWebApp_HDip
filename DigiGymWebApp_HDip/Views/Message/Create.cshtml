@model DigiGymWebApp_HDip.Models.Message

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row pre-footer">

        <h2 class="dashed py-3 text-center">Create Message</h2>

        @if (ViewBag.ConversationInfo != null)
        {
            var conversation = ViewBag.ConversationInfo as DigiGymWebApp_HDip.Models.Conversation;
            <p><strong>Conversation ID:</strong> @conversation.ConversationID</p>
        }
        <div class="col-md-2"></div>
        <div class="col-md-8">
        <form asp-action="Create" method="post">
            @if (ViewBag.ConversationInfo != null)
            {
                <input type="hidden" asp-for="ConversationID" value="@ViewBag.ConversationInfo.ConversationID" />
            }
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group text-center py-3">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>

        <div class="text-center">
            <a asp-action="Messages">Back to Messages</a>
        </div>
        </div>
        <div class="col-md-2"></div>

    </div>
</div>