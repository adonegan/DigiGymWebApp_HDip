@model DigiGymWebApp_HDip.Models.UserProfile

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">

        <h1 class="text-center dashed py-3">Edit Profile</h1>

    <div class="row pre-footer">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProfileID" />
                <div class="form-group">
                    <label asp-for="Height" class="control-label"></label>
                    <input asp-for="Height" class="form-control" />
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <select asp-for="Gender" class="form-control" asp-items="@ViewBag.Gender"></select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group text-center py-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            <div class="text-center">
                <a asp-action="Profile">Back to Profile</a>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
